    <div class="container">
        <h2>Listado de productos</h2>
    
        <table class="table table-dark">
                <tr>
                    <th>Producto</th>
                    <th>Marca</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            {{#each listado}}
                <tr>
                    <td>{{producto}}</td>
                    <td>{{marca}}</td>
                    <td>{{cantidad}}</td>
                    <td>
                        <a href="/editar/{{_id}}" class="btn btn-success">Editar</a>
                        <a href="/borrar/{{_id}}" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            {{/each}}
        </table>
         <a href="/agregar" class="btn btn-primary">Agregar producto</a>
    </div>
    